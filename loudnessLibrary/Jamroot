
import os ;

local BOOST_ROOT_PATH = [ modules.peek : BOOST_ROOT ] ; 

project :
		requirements
		<include>include
		<include>src
		<include>tool/io
		<include>tool/common
		<include>$(BOOST_ROOT_PATH)
	:
		usage-requirements
		<include>include
		<include>tool/io
	:
		build-dir .build/
	;

lib loudnessLibrary :
	[ glob src/*.cpp ]
	;
	
lib soundFile :
		[ glob tool/io/*.cpp ]
	:
		<library>/project-config//libsndfile
	;

exe loudness-analyser :
	[ glob tool/analyser/*.cpp ]
	soundFile
	loudnessLibrary
	;

exe loudness-corrector :
	[ glob tool/corrector/*.cpp ]
	soundFile
	loudnessLibrary
	;

explicit
	loudnessLibrary
	soundFile
	;
