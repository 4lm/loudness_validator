
project
	:
		requirements
		<cxxflags>-fbounds-check
		<cflags>-fbounds-check
	;


exe loudness-analyser :
	[ glob analyser/*.cpp ]
	common//tool-gain/<link>static
	..//soundFile/<link>static
	..//loudnessLibrary/<link>static
	;

exe loudness-corrector :
	[ glob corrector/*.cpp ]
	common//tool-gain-and-limiter/<link>static
	..//soundFile/<link>static
	..//loudnessLibrary/<link>static
	;

install analyser-bins :
		loudness-analyser
	:
		<install-dependencies>off
		<install-type>EXE
		<variant>debug:<location>$(DIST_ROOT)/debug/bin
		<variant>release:<location>$(DIST_ROOT)/release/bin
	;
	
install corrector-bins :
		loudness-corrector
	:
		<install-dependencies>off
		<install-type>EXE
		<variant>debug:<location>$(DIST_ROOT)/debug/bin
		<variant>release:<location>$(DIST_ROOT)/release/bin
	;

install tools-bins :
		loudness-analyser
		loudness-corrector
	:
		<install-dependencies>off
		<install-type>EXE
		<variant>debug:<location>$(DIST_ROOT)/debug/bin
		<variant>release:<location>$(DIST_ROOT)/release/bin
	;

explicit
	loudness-analyser
	loudness-corrector
	analyser-bins
	corrector-bins
	;
